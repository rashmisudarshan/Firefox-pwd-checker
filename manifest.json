{
    "manifest_version": 2,
    "name": "Password Breach Checker",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "https://api.pwnedpasswords.com/",
      "notifications"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/favicon-32x32.png"
      }
    },
    "icons": {
      "48": "icons/favicon-32x32.png"
    }
  }
  